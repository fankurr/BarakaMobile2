<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ui.usermanaje.WorkerDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="33dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="0dp"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgWorkerDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/default_image_person_small"  />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewNameWorkerDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center_vertical"
                    android:text="name_worker"
                    android:textColor="@color/colorDark"
                    android:textSize="30sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:text="Login"
                android:textColor="@color/colorDark"
                android:textSize="21sp" />

            <Switch
                android:id="@+id/swLoginWorkerDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="center_vertical"
                android:text="Switch"
                android:textColor="@color/colorDark"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:text="Posisi"
                android:textColor="@color/colorDark"
                android:textSize="21sp"  />

            <TextView
                android:id="@+id/textViewLvlWorkerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="center_vertical"
                android:text="level_user"
                android:textColor="@color/colorDark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:text="Alamat"
                android:textColor="@color/colorDark"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewAddrWorkerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="center_vertical"
                android:text="@string/lorem_ipsum_dolor"
                android:textColor="@color/colorDark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:text="No. Telepon/Whatsapp"
                android:textColor="@color/colorDark"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTlpWorkerDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="08xxxxxxxxx"
                    android:textColor="@color/colorDark"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imgTlpWorkerDetail"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_baseline_phone_24"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imgWAWorkerDetail"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_whatsapp"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/colorDark"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewEmailWorkerDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="karyawan@email.com"
                    android:textColor="@color/colorDark"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imgEmailWorkerDetail"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_outline_email_24"
                    tools:ignore="VectorDrawableCompat"  />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnPecatWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:text="Berhentikan"
            android:textColor="@color/colorDark"
            android:textSize="15sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="9dp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="2dp" />
    </LinearLayout>
</ScrollView>