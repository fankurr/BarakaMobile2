<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardWorker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="9dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="15dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgWorker"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_image_person_small" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/ubuntu_medium"
                android:text="name_worker"
                android:textColor="@color/colorDark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewJabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/ubuntu"
                android:text="jabatan"
                android:textColor="@color/colorDark"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgTlpWorker"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_baseline_phone_24"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imgWAWorker"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_whatsapp"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imgEmailWorker"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:maxWidth="50dp"
                    android:maxHeight="60dp"
                    app:srcCompat="@drawable/ic_outline_email_24"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>